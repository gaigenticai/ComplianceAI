# Production Environment Configuration
# This file contains environment-specific settings for production deployment
# Copy this file and customize for your environment

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
REQUIRE_AUTH=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Database Configuration
DB_HOST=complianceai-postgres
DB_PORT=5432
DB_NAME=complianceai_prod
DB_USER=complianceai
DB_PASSWORD=<replace-with-actual-password>
DB_SSL_MODE=require
DB_MAX_CONNECTIONS=200
DB_CONNECTION_TIMEOUT=30

# MongoDB Configuration
MONGODB_HOST=complianceai-mongodb
MONGODB_PORT=27017
MONGODB_DB=complianceai_prod
MONGODB_USER=complianceai
MONGODB_PASSWORD=<replace-with-actual-password>
MONGODB_SSL=true
MONGODB_REPLICA_SET=rs0
MONGODB_MAX_POOL_SIZE=100

# Redis Configuration
REDIS_HOST=complianceai-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=<replace-with-actual-password>
REDIS_SSL=true
REDIS_MAX_CONNECTIONS=50
REDIS_CONNECTION_TIMEOUT=30

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=complianceai-kafka-0:9092,complianceai-kafka-1:9092,complianceai-kafka-2:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=complianceai
KAFKA_SASL_PASSWORD=<replace-with-actual-password>
KAFKA_SSL_CA_LOCATION=/etc/ssl/certs/ca-certificates.crt
KAFKA_NUM_PARTITIONS=3
KAFKA_DEFAULT_REPLICATION_FACTOR=3
KAFKA_REQUEST_TIMEOUT_MS=30000
KAFKA_SESSION_TIMEOUT_MS=30000

# Security Configuration
JWT_SECRET_KEY=<replace-with-256-bit-secret>
ENCRYPTION_KEY=<replace-with-256-bit-key>
AES_ENCRYPTION_KEY=<replace-with-256-bit-key>
HMAC_SECRET_KEY=<replace-with-256-bit-key>

# OAuth2 Configuration (if using external OAuth provider)
OAUTH2_CLIENT_ID=<replace-with-oauth-client-id>
OAUTH2_CLIENT_SECRET=<replace-with-oauth-client-secret>
OAUTH2_AUTHORIZATION_URL=<replace-with-oauth-auth-url>
OAUTH2_TOKEN_URL=<replace-with-oauth-token-url>
OAUTH2_USER_INFO_URL=<replace-with-oauth-user-info-url>
OAUTH2_REDIRECT_URI=https://complianceai.example.com/auth/callback

# Regulatory API Configuration
EBA_API_BASE_URL=https://api.eba.europa.eu
EBA_CLIENT_ID=<replace-with-eba-client-id>
EBA_CLIENT_SECRET=<replace-with-eba-client-secret>
EBA_TOKEN_URL=https://api.eba.europa.eu/oauth/token

FEDERAL_RESERVE_API_BASE_URL=https://api.federalreserve.gov
FEDERAL_RESERVE_API_KEY=<replace-with-frb-api-key>

# SFTP Configuration
SFTP_HOST=sftp.regulator.example.com
SFTP_PORT=22
SFTP_USERNAME=complianceai_prod
SFTP_KEY_PATH=/secrets/sftp/private_key
SFTP_KNOWN_HOSTS_PATH=/secrets/sftp/known_hosts
SFTP_CONNECTION_TIMEOUT=30
SFTP_MAX_RETRIES=3

# Email Configuration
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USERNAME=complianceai@company.com
SMTP_PASSWORD=<replace-with-smtp-password>
SMTP_TLS=true
SMTP_FROM_EMAIL=complianceai@company.com
SMTP_FROM_NAME=ComplianceAI System

# Slack Integration (for alerts)
SLACK_WEBHOOK_URL=<replace-with-slack-webhook-url>
SLACK_CHANNEL=#compliance-alerts
SLACK_USERNAME=ComplianceAI
SLACK_ICON_EMOJI=:shield:

# Monitoring Configuration
PROMETHEUS_PUSHGATEWAY_URL=http://prometheus-pushgateway:9091
GRAFANA_URL=https://grafana.company.com
GRAFANA_API_KEY=<replace-with-grafana-api-key>

# Backup Configuration
BACKUP_S3_BUCKET=complianceai-prod-backups
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=<replace-with-aws-access-key>
BACKUP_S3_SECRET_KEY=<replace-with-aws-secret-key>
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=<replace-with-backup-encryption-key>

# Load Balancing Configuration
LOAD_BALANCER_ALGORITHM=least_conn
LOAD_BALANCER_MAX_CONNECTIONS=1000
LOAD_BALANCER_TIMEOUT=30

# Performance Tuning
REPORT_GENERATION_TIMEOUT=7200
MAX_CONCURRENT_REPORTS=5
DATA_PROCESSING_BATCH_SIZE=10000
CACHE_TTL_SECONDS=3600
API_RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Resource Limits
WEB_INTERFACE_CPU_LIMIT=1000m
WEB_INTERFACE_MEMORY_LIMIT=1Gi
WEB_INTERFACE_CPU_REQUEST=500m
WEB_INTERFACE_MEMORY_REQUEST=512Mi

POSTGRES_CPU_LIMIT=2000m
POSTGRES_MEMORY_LIMIT=4Gi
POSTGRES_CPU_REQUEST=1000m
POSTGRES_MEMORY_REQUEST=2Gi

REDIS_CPU_LIMIT=500m
REDIS_MEMORY_LIMIT=1Gi
REDIS_CPU_REQUEST=250m
REDIS_MEMORY_REQUEST=512Mi

KAFKA_CPU_LIMIT=1000m
KAFKA_MEMORY_LIMIT=2Gi
KAFKA_CPU_REQUEST=500m
KAFKA_MEMORY_REQUEST=1Gi

# Logging Configuration
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10
LOG_COMPRESSION=gzip
CENTRALIZED_LOGGING_ENABLED=true
LOG_SHIPPING_ENDPOINT=https://logs.company.com/api/logs

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=2555
AUDIT_ENCRYPTION_ENABLED=true
AUDIT_IMMUTABLE=true
AUDIT_EXTERNAL_STORAGE=s3://complianceai-audit-logs

# Compliance Configuration
COMPLIANCE_MODE=strict
REGULATORY_DEADLINE_BUFFER_DAYS=5
AUTO_ESCALATION_ENABLED=true
COMPLIANCE_REPORTING_ENABLED=true
REGULATORY_CHANGE_MONITORING_ENABLED=true

# Feature Flags
EXPERIMENTAL_FEATURES_ENABLED=false
ADVANCED_ANALYTICS_ENABLED=true
MACHINE_LEARNING_ENABLED=true
BLOCKCHAIN_AUDIT_ENABLED=false

# Network Configuration
INTERNAL_NETWORK_CIDR=10.0.0.0/8
EXTERNAL_ACCESS_CIDR=0.0.0.0/0
VPN_REQUIRED=false
IP_WHITELIST_ENABLED=false

# SSL/TLS Configuration
SSL_CERTIFICATE_PATH=/etc/ssl/certs/complianceai.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/complianceai.key
SSL_CA_CERTIFICATE_PATH=/etc/ssl/certs/ca.crt
SSL_PROTOCOL=TLSv1.2
SSL_CIPHERS=HIGH:!aNULL:!eNULL:!EXPORT:!DES:!RC4:!MD5:!PSK:!SRP:!CAMELLIA

# Session Management
SESSION_TIMEOUT_MINUTES=30
SESSION_MAX_CONCURRENT=5
SESSION_REMEMBER_ME_DAYS=30
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv,json,xml
FILE_UPLOAD_TIMEOUT=300
FILE_VIRUS_SCANNING_ENABLED=true
FILE_ENCRYPTION_ENABLED=true

# API Configuration
API_VERSION=v1
API_TIMEOUT_SECONDS=30
API_MAX_REQUEST_SIZE=10MB
API_RATE_LIMIT_ENABLED=true
API_CORS_ENABLED=true
API_CORS_ORIGINS=https://complianceai.example.com
API_DOCUMENTATION_ENABLED=true

# Container Registry Configuration
CONTAINER_REGISTRY=registry.company.com/complianceai
CONTAINER_REGISTRY_USERNAME=<replace-with-registry-username>
CONTAINER_REGISTRY_PASSWORD=<replace-with-registry-password>
IMAGE_PULL_POLICY=Always
IMAGE_SECURITY_SCANNING_ENABLED=true

# Kubernetes Configuration
KUBERNETES_NAMESPACE=complianceai-prod
KUBERNETES_CLUSTER_NAME=prod-cluster
KUBERNETES_SERVICE_ACCOUNT=complianceai-service-account
KUBERNETES_INGRESS_CLASS=nginx
KUBERNETES_STORAGE_CLASS=fast-ssd

# Cloud Configuration (if using cloud provider)
CLOUD_PROVIDER=AWS
CLOUD_REGION=us-east-1
CLOUD_AVAILABILITY_ZONES=us-east-1a,us-east-1b,us-east-1c
CLOUD_VPC_ID=<replace-with-vpc-id>
CLOUD_SECURITY_GROUPS=<replace-with-security-group-ids>

# Disaster Recovery Configuration
DR_ENABLED=true
DR_REGION=us-west-2
DR_BACKUP_SCHEDULE=0 2 * * *
DR_RTO_MINUTES=60
DR_RPO_MINUTES=15
DR_FAILOVER_AUTOMATIC=true

# Maintenance Configuration
MAINTENANCE_WINDOW_START=02:00
MAINTENANCE_WINDOW_END=04:00
MAINTENANCE_WINDOW_TIMEZONE=UTC
MAINTENANCE_AUTO_APPROVAL=false
MAINTENANCE_NOTIFICATION_DAYS=7

# Cost Optimization
COST_OPTIMIZATION_ENABLED=true
AUTO_SCALING_ENABLED=true
SPOT_INSTANCES_ENABLED=false
RESERVED_INSTANCES_ENABLED=true

# Support Configuration
SUPPORT_EMAIL=support@company.com
SUPPORT_PHONE=+1-555-0123
SUPPORT_PORTAL_URL=https://support.company.com
SUPPORT_TICKET_SYSTEM=Jira
SUPPORT_SLA_HOURS=4
