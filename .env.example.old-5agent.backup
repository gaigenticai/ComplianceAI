# Agentic AI KYC Engine - Environment Variables
# Copy this file to .env and configure with your values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
RUST_LOG=info

# Security
JWT_SECRET=your-secret-key-change-in-production-minimum-32-characters
REQUIRE_AUTH=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=kyc_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# MongoDB
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password
MONGO_DB=kyc_db
MONGODB_URL=mongodb://admin:password@mongodb:27017/kyc_db?authSource=admin

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# =============================================================================
# MESSAGE BUS CONFIGURATION
# =============================================================================

# Apache Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_GROUP_ID=kyc-orchestrator

# =============================================================================
# AI/ML SERVICES CONFIGURATION
# =============================================================================

# OpenAI API (Required for AI agents)
OPENAI_API_KEY=your-openai-api-key-here

# Hugging Face (Optional, for local models)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Data Ingestion Agent
DATA_INGESTION_AGENT_URL=http://data-ingestion-agent:8001
DATA_INGESTION_AGENT_TIMEOUT=30

# KYC Analysis Agent
KYC_ANALYSIS_AGENT_URL=http://kyc-analysis-agent:8002
KYC_ANALYSIS_AGENT_TIMEOUT=60

# Decision Making Agent
DECISION_MAKING_AGENT_URL=http://decision-making-agent:8003
DECISION_MAKING_AGENT_TIMEOUT=45

# Compliance Monitoring Agent
COMPLIANCE_MONITORING_AGENT_URL=http://compliance-monitoring-agent:8004
COMPLIANCE_MONITORING_AGENT_TIMEOUT=30

# Data Quality Agent
DATA_QUALITY_AGENT_URL=http://data-quality-agent:8005
DATA_QUALITY_AGENT_TIMEOUT=30

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Metrics Collection
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# PORT CONFIGURATION (for avoiding conflicts)
# =============================================================================

# Main Application Port
KYC_PORT=8000

# Agent Ports (internal, usually don't need to change)
DATA_INGESTION_PORT=8001
KYC_ANALYSIS_PORT=8002
DECISION_MAKING_PORT=8003
COMPLIANCE_MONITORING_PORT=8004
DATA_QUALITY_PORT=8005

# Infrastructure Ports
KAFKA_PORT=9092
REDIS_PORT=6379
POSTGRES_PORT=5432
MONGODB_PORT=27017

# =============================================================================
# REGULATORY COMPLIANCE SETTINGS
# =============================================================================

# Default Regulatory Requirements
DEFAULT_REGULATIONS=aml,gdpr

# AML Configuration
AML_SANCTIONS_LISTS=ofac,un,eu
AML_PEP_SCREENING=true
AML_TRANSACTION_MONITORING=true

# GDPR Configuration
GDPR_DATA_RETENTION_DAYS=2555  # 7 years
GDPR_CONSENT_REQUIRED=true
GDPR_DATA_MINIMIZATION=true

# Basel III Configuration
BASEL_III_OPERATIONAL_RISK=true
BASEL_III_MODEL_VALIDATION=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Worker Configuration
RUST_WORKERS=4
PYTHON_WORKERS=4

# Database Connection Pools
POSTGRES_MAX_CONNECTIONS=10
MONGODB_MAX_CONNECTIONS=10
REDIS_MAX_CONNECTIONS=10

# Kafka Configuration
KAFKA_BATCH_SIZE=16384
KAFKA_LINGER_MS=5
KAFKA_RETRIES=3

# Processing Limits
MAX_CONCURRENT_SESSIONS=100
SESSION_TIMEOUT_SECONDS=3600
PROCESSING_TIMEOUT_SECONDS=300

# =============================================================================
# DEVELOPMENT/TESTING SETTINGS
# =============================================================================

# Development Mode
DEVELOPMENT_MODE=false
DEBUG_LOGGING=false

# Testing
RUN_TESTS=false
TEST_DATA_PATH=./test-data

# Mock Services (for testing without external dependencies)
USE_MOCK_OPENAI=false
USE_MOCK_DATABASES=false

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Configuration
ENABLE_BACKUPS=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Recovery Settings
ENABLE_DISASTER_RECOVERY=false
RECOVERY_POINT_OBJECTIVE_MINUTES=60

# =============================================================================
# INDUSTRY-SPECIFIC CONFIGURATIONS
# =============================================================================

# Industry Type (banking, fintech, crypto, insurance, etc.)
INDUSTRY_TYPE=banking

# Jurisdiction
PRIMARY_JURISDICTION=US
ADDITIONAL_JURISDICTIONS=EU,UK

# Risk Tolerance
RISK_TOLERANCE_LEVEL=medium
AUTO_APPROVE_THRESHOLD=0.9
AUTO_REJECT_THRESHOLD=0.1

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@yourcompany.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=kyc-engine@yourcompany.com

# Webhook Notifications
WEBHOOK_URL=https://your-webhook-endpoint.com/kyc-notifications
WEBHOOK_SECRET=your-webhook-secret

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Third-party KYC Services (Optional)
JUMIO_API_KEY=your-jumio-api-key
ONFIDO_API_KEY=your-onfido-api-key
TRULIOO_API_KEY=your-trulioo-api-key

# Credit Bureau APIs (Optional)
EXPERIAN_API_KEY=your-experian-api-key
EQUIFAX_API_KEY=your-equifax-api-key

# Sanctions/Watchlist APIs (Optional)
WORLD_CHECK_API_KEY=your-world-check-api-key
ACURIS_API_KEY=your-acuris-api-key

# =============================================================================
# ADVANCED FEATURES
# =============================================================================

# Machine Learning Model Configuration
ML_MODEL_UPDATE_FREQUENCY=weekly
ML_MODEL_VALIDATION_THRESHOLD=0.85
ENABLE_CONTINUOUS_LEARNING=true

# Advanced Analytics
ENABLE_BEHAVIORAL_ANALYTICS=true
ENABLE_NETWORK_ANALYSIS=false
ENABLE_PREDICTIVE_MODELING=true

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=1000
API_BURST_LIMIT=100

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Encryption
DATA_ENCRYPTION_KEY=your-32-character-encryption-key-here
ENABLE_FIELD_LEVEL_ENCRYPTION=true

# Access Control
ENABLE_RBAC=true
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years

# =============================================================================
# EXAMPLE VALUES FOR TESTING
# =============================================================================

# ============================================================================
# AGENTIC AI ADVANCED FEATURES - NEW ENVIRONMENT VARIABLES
# ============================================================================

# Pillar 1: Advanced Visual Perception (Multimodal Document Understanding)
# -------------------------------------------------------------------------
# Vision model configuration for document analysis
VISION_MODEL=gpt4v
# GPT-4V API key (required if using GPT-4V vision model)
GPT4V_API_KEY=your-gpt4v-api-key-here

# Pillar 2: Long-Term Memory and Learning (RAG with Vector Database)
# ------------------------------------------------------------------
# Memory backend configuration (qdrant or pinecone)
MEMORY_BACKEND=qdrant
# Qdrant vector database configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
# Pinecone configuration (required if using Pinecone backend)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp-free

# Pillar 3: Dynamic and Autonomous Rule Sourcing
# -----------------------------------------------
# Web search API for autonomous compliance rule discovery
TAVILY_API_KEY=your-tavily-api-key-here
# Enable autonomous web search for compliance rules
ENABLE_WEB_SEARCH=true

